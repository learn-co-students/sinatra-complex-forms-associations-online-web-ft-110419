<h1>Update Pet</h1>

<h3>Edits for <%= @pet.name %></h3>

<form action="/pets/<%= @pet.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <label>Edit the pets name</label>
  <input id="pet_name" type="text" name="pet[name]" value="<%= @pet.name %>"><br>

  <h3>Existing Owners</h3>
  <% Owner.all.each do |owner|%>
    <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%='checked' if @pet.owner == owner %>><%= owner.name %></input><br>
  <% end %><br>

  <h3>New Owner</h3>
  <label>Owner Name:</label>
  <input id="owner_name" type="text" name="owner[name]"></input><br>


  <input type="submit" value="Update Pet">
</form>